@page
@using Microsoft.Extensions.Localization;
@model ForgotPasswordModel
@inject IStringLocalizer<ForgotPasswordModel> localizer
@{
    ViewData["Title"] = localizer["forgot?"];
}

<h1>@ViewData["Title"]</h1>
<h2>@localizer["enter"]</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control textfield" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">@localizer["reset"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
