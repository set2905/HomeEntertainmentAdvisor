@using HomeEntertainmentAdvisor.Models;

<MudPaper Height="150px">
    <MudStack Style="height:100%;" Row="true">
        <MudImage ObjectFit="ObjectFit.Fill" Src="https://cdn.shazoo.ru/c330x180/707447_ZWvHp2x_starfield.jpg" />
        <MudStack>
            <MudText Typo="Typo.h4">
                @Review.Name
            </MudText>
            <MudStack Row="true">
                <MudText>
                    @if (Review.Rating.Author!=null)
                        @Review.Rating.Author.UserName


                    </MudText>
                    <MudSpacer />
                    <MudIconButton Icon="@Icons.Material.Filled.ThumbUp" />
                    <MudText>
                        @Review.CachedLikes
                    </MudText>
                    <MudIconButton Icon="@Icons.Material.Filled.ThumbDown" />
                </MudStack>
            </MudStack>
        </MudStack>
    </MudPaper>
    @code
    {
    [Parameter]
    public Review Review { get; set; } = new();

    private MudMarkdownStyling Styling { get; } = new();

}
