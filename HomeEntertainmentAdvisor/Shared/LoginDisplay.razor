@using Microsoft.Extensions.Localization
@inject IStringLocalizer<LoginDisplay> Localizer

<AuthorizeView>
    <Authorized>
        <MudNavLink Href="Identity/Account/Logout" IconColor="Color.Surface" Icon="@Icons.Material.Filled.Logout">
            <MudText Typo="Typo.body1">
                @Localizer["log out"]
            </MudText>
        </MudNavLink>
    </Authorized>
    <NotAuthorized>
        <MudNavLink Href="Identity/Account/Login" IconColor="Color.Surface" Icon="@Icons.Material.Filled.Login">
            <MudText Typo="Typo.body1">
                @Localizer["log in"]
            </MudText>
        </MudNavLink>
    </NotAuthorized>
</AuthorizeView>
