@using Microsoft.Extensions.Localization
@inject IStringLocalizer<LoginDisplay> Localizer

<AuthorizeView>
    <Authorized>
        <MudButton Class="px-3" Href="Identity/Account/Manage" Variant="Variant.Filled" Color="Color.Primary" EndIcon="@Icons.Material.Filled.Login">
            @Localizer["hello"], @context.User.Identity?.Name!
        </MudButton>
        <MudButton Class="px-3" Href="Identity/Account/Manage" Variant="Variant.Filled" Color="Color.Primary" EndIcon="@Icons.Material.Filled.Logout">
            @Localizer["log out"]
        </MudButton>
    </Authorized>
    <NotAuthorized>
        <MudButton Class="px-3" Href="Identity/Account/Register" Variant="Variant.Filled" Color="Color.Primary">
            @Localizer["register"]
        </MudButton>
        <MudButton Class="px-3" Href="Identity/Account/Login" Variant="Variant.Filled" Color="Color.Primary">
            @Localizer["log in"]
        </MudButton>
    </NotAuthorized>
</AuthorizeView>
