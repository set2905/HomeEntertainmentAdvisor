@using Microsoft.Extensions.Localization
@inject IStringLocalizer<LoginDisplay> Localizer

<AuthorizeView>
    <Authorized>
        <MudText Class="mx-3">
            <MudText Class="d-none d-md-block" Typo="Typo.body1">
                @Localizer["hello"], @context.User.Identity?.Name!
            </MudText>

        </MudText>
        <MudNavLink Class="mx-3" Href="Identity/Account/Logout" Icon="@Icons.Material.Filled.Logout">
            <MudText Class="d-none d-md-block" Typo="Typo.body1">
                @Localizer["log out"]
            </MudText>

        </MudNavLink>
    </Authorized>
    <NotAuthorized>
        <MudNavLink Class="mx-3" Href="Identity/Account/Register">
            <MudText Typo="Typo.body1">
                @Localizer["register"]
            </MudText>
        </MudNavLink>
        <MudNavLink Class="mx-3" Href="Identity/Account/Login" Icon="@Icons.Material.Filled.Login">
            <MudText Class="d-none d-md-block" Typo="Typo.body1">
                @Localizer["log in"]
            </MudText>
        </MudNavLink>
    </NotAuthorized>
</AuthorizeView>
